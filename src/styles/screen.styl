$c-bg = #FAFAFA
$c-main = #5FD6A4
$c-text = #9C9C9C
$c-fade = #47916F

@-ms-viewport
	width device-width

html, body
	height 100%
	cursor default
	overflow-x hidden

html, body, p, h1, h2, h3, pre, ul, li
	padding 0
	margin 0

body
	background $c-bg url(../images/bg.png)
	color $c-text
	font-family sans-serif
	font-size 14px

	.wf-active &
		font-family "source-sans-pro", sans-serif

p, h1, h2, h3, pre, ul
	max-width 640px
	padding 0 20px
	margin 0 auto
	line-height 1.5

p, h1, h2, h3
	text-align center

p, h2, h3
	margin-top 10px
	margin-bottom 20px
	line-height 1.75

ul
	padding-left 1em
	li
		margin .5em 0

pre
	tab-size 2
	max-width 400px
	background #FAFAFA
	padding 1em 2em
	border-radius 3px
	margin 20px auto

a
	color $c-fade
	text-decoration none
	border-bottom solid 1px rgba($c-fade, 0)

	transition all ease .123s

	&:hover, &:active
		border-bottom-color rgba($c-fade, .5)

code
	display inline-block
	background #EEE
	color $c-fade
	border-radius 2px
	padding 0 5px
	line-height 1.2

h1
	font-size 3.5em
	font-weight 100
	text-shadow 0 2px 0 rgba($c-fade, .5)
	span
		font-weight 600

h2
	font-size 1.8em

h3
	font-size 1.4em


.note
	font-style italic
	margin-top 40px
	opacity .5

.header
	background $c-main
	color #FFF
	padding 50px 0 20px
	box-shadow 0 3px 0 rgba($c-fade, .07)

.by-mangoweb
	color $c-fade
	font-size 12px

.part
	margin 40px 0

.lead
	font-size 1.8em
	line-height 1.3

.get-it
	text-align center

.btn
	display inline-block
	background $c-main
	color #FFF
	font-weight bold
	padding .6em 1.2em
	border-radius 3px
	font-size 28px

.under-the-hood
	text-align: center

.usage
	ul
		max-width 400px
		margin-bottom 30px

.featureset
	display inline-block
	vertical-align top
	margin 0 20px
	h3
		margin-bottom 10px

.featureset-items
	list-style none
	text-align center
	margin-bottom 30px
	color $c-main

.build
	background rgba(#FFF, .8)
	padding 30px 0

	code
		background #F8F8F8

	pre
		background transparent

.footer
	padding-bottom 60px
	p
		line-height 1.2

@media only screen and (min-width: 640px)
	body
		font-size 18px
	.header
		background-image url(../images/mango-cli-logo.svg)
		background-repeat no-repeat
		background-size 440px
		background-position center center
		padding 100px 0
	h1
		opacity 0
	.by-mangoweb
		padding-top 20px
		padding-left 380px
	.part
		margin 80px 0
